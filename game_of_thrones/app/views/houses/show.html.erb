<h1> <%= @house.name %> </h1>

<p><img class="crests" src="<%= @house.crest_url %>"></p>

<article>
<p>
  <h2>Words:</h2>
  <div class="text"> <%= @house.words %> </div>
</p>
<p>
  <h2>Seat:</h2>
  <div class="text"> <%= @house.seat %> </div>
</p>
<p>
  <h2>Realm:</h2>
  <div class="text"> <%= @house.realm %> </div>
</p>
<p>
  <%= link_to "Edit House", edit_house_path(@house) %> |
  <%= link_to "Delete House", house_path(@house), method: :delete %>
</p>

</article>
<hr>
<p>
  <div class="text"> <h3> House Members </h3> </div>
</p>
<p>
<% @house.characters.each do |character| %>

<p> <%= link_to "#{character.name}", house_character_path(@house, character) %> </p>

<% end %>
</p>

<p><%= link_to "Add a New Character", new_house_character_path(@house) %></p>
